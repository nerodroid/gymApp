{
	"extends": "@tsconfig/react-native/tsconfig.json" /* Recommended React Native TSConfig base */,
	"compilerOptions": {
		"skipLibCheck": true,
		"allowJs": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react-native",
		"lib": ["ES2020", "es2019", "es2017", "es7", "es6"],
		"moduleResolution": "node",
		"typeRoots": ["node_modules/@types", "src/types"],
		"resolveJsonModule": true,
		"noEmit": true,
		"strict": true,
		"target": "esnext",
		"module": "commonjs",
		"baseUrl": "./",
		"outDir": "./dist",
		"paths": {

		}
	},
	"exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js", "storage/realm/seeds/**"]
}
